<h1>
    <%=heading%>
</h1>

<form action="/submit-registration" method="POST">
    <div>
        <label for="form__username">Enter Username</label>
        <input type="text" placeholder="username" id="form__username" name="username">
    </div>
    <div>
        <label for="form__password">Enter Your Password</label>
        <input type="password" placeholder="password" id="form__password">
    </div>
    <div>
        <label for="form__password-confirm">Confirm Your Password</label>
        <input type="password" placeholder="password" id="form__password-confirm" name="password">
    </div>
    <div>
        <input type="submit" name="form__register_submit">
    </div>
</form>